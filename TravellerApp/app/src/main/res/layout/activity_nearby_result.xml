<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.nujules.travellerapp.NearbyResult"
    style="@style/Background">

    <Button
        style="@style/Menu.Open"
        android:id="@+id/btnMenu"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/trasparentBackground">

        <ImageButton
            style="@style/NearbyResultButton.HotelDux.DarkOrange"
            android:layout_marginTop="80dp"
            android:id="@+id/btnHotelDux1" />

        <ImageButton
            style="@style/NearbyResultButton.HotelDux.Brown"
            android:id="@+id/btnHotelDux2"
            android:layout_below="@+id/btnHotelDux1"
            android:layout_marginTop="30dp" />

        <ImageButton
            style="@style/NearbyResultButton.HotelDux.Turquoise"
            android:id="@+id/btnHotelDux3"
            android:layout_below="@id/btnHotelDux2"
            android:layout_marginTop="30dp" />

        <ImageButton
            style="@style/NearbyResultButton.HotelDux.DarkBrown"
            android:id="@+id/btnHotelDux4"
            android:layout_below="@id/btnHotelDux3"
            android:layout_marginTop="30dp" />
    </RelativeLayout>

</RelativeLayout>
